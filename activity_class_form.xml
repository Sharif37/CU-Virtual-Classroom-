                    android:id="@+id/time3"
                    android:hint="Time"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/time4"
                    android:hint="Time"
                    android:padding="10dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/sunday_header"
                    android:padding="10dp"
                    android:text="Sunday"
                    android:textStyle="bold" />

                <EditText
            android:id="@+id/s1"
            android:hint="Class"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/s2"
            android:hint="Class"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/s3"
            android:hint="Class"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/s4"
            android:hint="Class"
            android:padding="10dp"/>

    </TableRow>

    <!-- Second Row -->
