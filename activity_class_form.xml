<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stretchColumns="*">


    <TextView
        android:text="Class Schedule"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">


    <!-- Header Row -->
    <TableRow>

        <TextView
            android:id="@+id/day_header"
            android:text="Day/Time"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/class1"
            android:text="Class 1"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/class2"
            android:text="Class 2"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/class3"
            android:text="Class 3"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/class4"
            android:text="Class 4"
            android:textStyle="bold"
            android:padding="10dp"/>

    </TableRow>

            <!-- First Row -->
            <TableRow>

                <TextView
                    android:id="@+id/time_header"
                    android:text=""
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/time1"
                    android:hint="Time"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/time2"
                    android:hint="Time"
                    android:padding="10dp" />

